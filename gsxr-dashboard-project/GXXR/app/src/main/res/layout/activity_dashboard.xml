                    android:layout_height="35dp"
                    app:paraFillColor="#F9DF2F"
                    app:paraShadowColor="#80F9DF2F"

                    app:paraShadowRadius="4dp"
                    app:paraShadowDx="0dp"
                    app:paraShadowDy="0dp"
                    app:paraCornerRadius="3dp"
                    app:paraSkewDirection="right"
                    app:paraSkewAmount="0.4"
                    app:paraScaleDirection="right"
                    app:paraScale="0.0"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="30dp"
                    />



            </androidx.constraintlayout.widget.ConstraintLayout>



        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.025">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/gear_indicator"
                android:layout_width="110dp"
                android:layout_height="80dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@mipmap/gsxr_gear_indicator" />

            <TextView
                android:id="@+id/gear_counter_txt"
                android:text="@string/current_gear"
                android:shadowColor="@color/neutral_gear_color"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10"
                android:textColor="@color/neutral_gear_color"
                android:textStyle="bold"
                android:textSize="50sp"
                android:textAlignment="center"
                android:fontFamily="@font/orbitron_xbold"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.4"

                />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lap_timer_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.98">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/laptimer_enable_state"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/gsxr_laptimer_on"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <TextView
                    android:id="@+id/lap_timer_clk"
                    android:text="@string/lap_timer"
                    android:textColor="#FF000000"
                    android:textSize="18sp"
                    android:shadowColor="#00000000"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="10"
                    android:fontFamily="@font/sevent_segment"
                    android:layout_width="150dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.6"
                    />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.42"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.025">

            <TextView
                android:id="@+id/speed_counter_txt"
                android:text="@string/speed_count"
                android:textColor="#00E5FF"
                android:textStyle="bold|italic"
                android:shadowColor="@color/default_theme_color"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="12"
                android:textSize="55sp"
                android:fontFamily="@font/orbitron_xbold"
                android:layout_width="150dp"
                android:textAlignment="center"
                android:layout_height="wrap_content" />

            <TextView
                android:text="@string/speed_units"
                android:textColor="#C5F0F4"
                android:textStyle="bold|italic"
                android:textSize="15sp"
                android:shadowColor="#00e5ff"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10"
                android:fontFamily="@font/orbitron_xbold"
                android:layout_width="50dp"
                android:textAlignment="center"
                android:layout_marginTop="9dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>